      <script type="text/javascript">
	  var loc = 0;
	  
         function North_click() {
			loc = 1;
            
            display.append(" You are now standing on the edge of a swamp, you hear something moving in the water");  
			
			
		}       
		
		 function South_click() {
			loc = 2;
			display.append(" You come acorss an abandoned car, the doors are locked");
		 }
		 
		 function East_click() {
			loc = 3;
			display.append(" You are still standing in the field with nothing in sight");
		}
		 
		 function West_click() {
			loc = 4;
		 display.append(" You come across a small campfire with survival gear and no one in sight.");
		}
		 
      </script>
